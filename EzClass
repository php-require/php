<?php

class zalup {
    
    // данные (свойства):
var $name = '10';
 
    function get_name() {
    echo 'самая огромная была длинной '.$this->name.'sm<br/>';
    }

    function piz($name) {
    echo 'самая огромная была длинной '. $this->name = $name.'sm';
    }

}
 
$b = new zalup(); 

$b->get_name(); 
 
$b->piz('40');


 
 
 
