<?php
header("Content-Type: text/html; charset=UTF-8");
 
$to = 'https://ru.investing.com/currencies/gau-usd-converter'; // страница донор
$ref = 'https://ru.investing.com'; // откуда пришли на страницу-донора
$ch = curl_init();
curl_setopt($ch, CURLOPT_URL, $to);
curl_setopt($ch, CURLOPT_HEADER, 0);
curl_setopt($ch, CURLOPT_CONNECTTIMEOUT, 30);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, 1);
curl_setopt($ch, CURLOPT_USERAGENT, 'Mozilla/5.0 (Windows NT 6.1; WOW64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/35.0.1916.153 Safari/537.36');
curl_setopt($ch, CURLOPT_REFERER, $ref);
$content = curl_exec($ch);
curl_close($ch);

preg_match_all('#<span\s*id="fl_header_pair_lst(.+?)</span>#is', $content, $arr);
$gold_price = strip_tags($arr[0][0]); 
$gold_price = str_replace(' ','', $gold_price);  
?>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>cUrl</title>
</head>
<body>
    <?php echo $gold_price; ?> 
</body>
</html>
 
